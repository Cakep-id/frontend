# Build React
FROM node:18-slim@sha256:6e2e8b6e6e2b2e5e2e8b6e6e2b2e5e2e8b6e6e2b2e5e2e8b6e6e2b2e5e2e8b6e6e2b2e5e2e8b6e6e2b2e5e2e8b6e6e2b2e5e2 AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Serve dengan nginx
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 3000
CMD ["nginx", "-g", "daemon off;"]
